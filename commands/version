#!/bin/bash

set -e
. "$GRPL_WORKDIR/utils/common"

cli_version_help() {
  cli_name=${0##*/}
  if ! grep -q "grpl" "$GRPL_WORKDIR/VERSION" >/dev/null 2>&1; then 
    extract_grapple_cli_version
  fi
  echo "
$cli_name
the grapple cli
Version: $(cat $GRPL_WORKDIR/VERSION)
https://grapple-solutions.com/

Usage: $cli_name [command]

Commands:
  *         Help
"
  exit 0
}

[ "$1" = "help" ] || [ "$1" = "h" ] && cli_version_help


if ! grep -q "grpl" "$GRPL_WORKDIR/VERSION" >/dev/null 2>&1; then 
  extract_grapple_cli_version
fi

  echo "
version
the grapple cli
Version: $(cat $GRPL_WORKDIR/VERSION)
https://grapple-solutions.com/
"



